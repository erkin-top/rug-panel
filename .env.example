# ================================
# Rug-Panel - Переменные окружения
# ================================
# Скопируйте этот файл в .env и настройте значения:
#   cp .env.example .env
#   nano .env
# ================================

# ==================== Сетевые настройки ====================
# Порт веб-панели
PANEL_PORT=8000

# Порт WireGuard VPN
WG_PORT=51820

# ==================== Основные настройки ====================
# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== БЕЗОПАСНОСТЬ (ОБЯЗАТЕЛЬНО!) ====================
# Секретный ключ для JWT токенов - ОБЯЗАТЕЛЬНО сгенерируйте!
# Генерация: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Или:       openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_KEY_HERE

# Время жизни JWT токена в минутах (1440 = 24 часа)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==================== WireGuard ====================
# Имя интерфейса WireGuard
WG_INTERFACE=wg0

# DNS серверы для клиентов (через запятую)
DEFAULT_DNS=77.88.8.8, 8.8.8.8

# Разрешённые IP для маршрутизации (через запятую)
DEFAULT_ALLOWED_IPS=0.0.0.0/0, ::/0

# Keepalive интервал в секундах (для NAT)
DEFAULT_PERSISTENT_KEEPALIVE=25

# ==================== Версия ====================
# Версия панели (используется для тегирования Docker образа)
PANEL_VERSION=1.4.3

# ==================== Язык интерфейса ====================
# Язык интерфейса панели (ru - русский, en - английский)
LANGUAGE=ru

# ==================== Опционально ====================
# Время жизни кэша конфига (в секундах)
# CONFIG_CACHE_TTL=5

# Время жизни кэша статусов (в секундах)
# STATUS_CACHE_TTL=2

# Размер LRU кэша для QR кодов
# QR_CACHE_SIZE=100
