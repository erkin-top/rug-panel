# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyi text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Docker
Dockerfile* text eol=lf
*.dockerignore text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.sqlite binary
*.sqlite3 binary
